<div class="main posts-index">
    <div class="container">
      取得資格一覧
      <%= form_tag ("/posts/index"), method: :get do %>
          <div class="posts-index-item">
            <!--選択ボックス-->
              <%= select_tag :search, options_from_collection_for_select(License.all,:license_name, :license_name), {include_blank: true} %>
              ：資格名を選択してください
              <!--検索ボタン-->
              <div class="form">
              <input type="submit" value="検索" class="">
              </div>
          </div>
      <% end %>
    </div>


    <!--検索結果表示-->
    <div class="container">
      <%= @post.count%>件
   
    <!--カラム名-->
    <table class="article_list">
      <th>資格名</th><th>氏名</th><th>取得日</th>
    </table>

    <!--リスト表示-->
      <% @post.each do |post| %>
      <div class="posts-index-item">
          <table class="article_list">
          <th><%= link_to(post.license_name, "/posts/#{post.id}") %></th>
          <th><%= link_to(post.holder_name, "/posts/#{post.id}") %></th>
          <th><%= link_to(post.date_of_license, "/posts/#{post.id}") %></th>
          </table>
      </div>
      <% end %>
   </div>
</div>