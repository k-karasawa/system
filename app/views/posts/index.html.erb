<div class="container">
  <h2>取得一覧</h2>
    <%= form_tag ("/posts/index"), method: :get do %>
      <div class="btn-group">
        <div class="posts-index-item">
          <!--選択ボックス-->
          <%= select_tag :search, options_from_collection_for_select(License.all,:license_name, :license_name), {include_blank: true, :onchange => "this.form.submit()"}  %>   
          ：資格名を選択してください
        </div>
      </div>
    <% end %>

  
    <br></br>  

    <!--検索件数表示-->
    <div class="container">
      <%= @post.count%>件　
    <!--クリアボタン-->
      <a href="/posts/index" class="border_slide_btnm">クリア</a>

    </div>



    <!--カラム名-->
    <table id="dtBasicExample" class="tbset table table-hover table table-sm" tbcl cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="th-sm">資格名</th>
          <th class="th-sm">氏名</th>
          <th class="th-sm">取得日</th>
          <th class="th-sm">編集</th>
        </tr>
      </thead>
   

      <!--リスト表示-->
      <tbody>
        <% @post.each do |post| %>
          <tr>
            <td><%= link_to(post.license_name, "/posts/#{post.id}") %></td>
            <td><%= link_to(post.holder_name, "/posts/#{post.id}") %></td>
            <td><%= link_to(post.date_of_license, "/posts/#{post.id}") %></td>
            <td><%= link_to("✔","/posts/#{post.id}/edit")%>
            </td>
          <tr>
        <% end %>
      </tbody>
    </table>
   </div>
</div>
