<div class="main posts-index">
    <div class="container">
        
      <%= form_tag ("/posts/index"), method: :get do %>
          <div class="posts-index-item">
            <%= select_tag :search, options_from_collection_for_select(License.all,:license_name, :license_name), {include_blank: true} %>
            ：資格名を選択してください
          </div>
        <input onchange="submit(this.form)" value="検索" >
      <% end %>
      
    </div>

    <div class="container">
      <% @post.each do |post| %>
        <div class="posts-index-item">
          <%= link_to(post.license_name, "/posts/#{post.id}") %>
          <%= link_to(post.holder_name, "/posts/#{post.id}") %>
          <%= link_to(post.date_of_license, "/posts/#{post.id}") %>
        </div>
      <% end %>
   </div>
</div>