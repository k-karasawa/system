<div class="container">
  <%= form_tag("/posts/#{@post.id}/update",id: "contact") do %>
    <h3>取得情報編集</h3>
    <h4>日付のみ編集できます</h4>
    <br></br>

          <p>資格名：<%= @post.license_name %></p>
          <p>取得者：<%= @post.holder_name %></p>
          取得日：
          <input value="<%= @post.date_of_license %>" class="col-sm-5" name="date_of_license" placeholder="資格取得日を入力" type="text" required autofocus>
          <h4>※入力は　半角YYYY-MM-DDで入力</h4>
          <button class="col-sm-2" name="submit" type="submit" id="contact-submit" data-submit="...Sending">更新</button>
  <% end %>
</div>