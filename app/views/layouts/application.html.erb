<!DOCTYPE html>
<html>
  <head>
    <title>資格管理システム</title>
    <%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">

      <div class="header-logo">
        資格管理システム
      </div>
				<ul class="navbar-nav ml-auto">	
						<% if @current_user %>
							<li>
								ログインユーザー : 
								<%= @current_user.user_name %>さん
							</li>
							
							<li class="nav-item">
								<%= link_to("取得一覧", "/posts/index") %>
							</li>	
							
							<li class="nav-item">
								<%= link_to("取得登録", "/posts/new") %>
							</li>
							
							<li class="nav-item">
								<%= link_to("資格一覧", "/licenses/index") %>
							</li>

							<li class="nav-item">
								<%= link_to("従業員管理", "/employees/index") %>
							</li>

							<li class="nav-item">
								<%= link_to("ログアウト", "/logout", {method: :post}) %>
							</li>

						<% else %>
							<li class="nav-item">
								<%= link_to("新規利用登録", "/signup") %>
							</li>
						<% end %>
				</ul>

				<% if flash[:notice] %>
					<div class="flash">
				<%= flash[:notice] %>
      </div>
    <% end %>
	</nav>

	<div class="container">
    <%= yield %>
	</div>

  </body>
</html>